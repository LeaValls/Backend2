<div class="container mb-3">
    <div class="row justify-content-center">
        <div class="col-2">
            {{#if pageInfo.hasPrevPage}}
                <a href={{pageInfo.prevLink}} class="btn btn-dark rounded">Anterior</a>
            {{/if}}
        </div>
        <div class="col-2">
            <p class="">PÃ¡gina {{pageInfo.page}}</p>
        </div>
        <div class="col-2">
            {{#if pageInfo.hasNextPage}}
                <a href={{pageInfo.nextLink}} class="btn btn-dark rounded">Siguiente</a>
            {{/if}}
        </div>
    </div>
</div>

<div id="products" class="uk-child-width-1-4@m" uk-grid>
  {{#each products}}
    <div>
      <div class="uk-card uk-card-default">
        <div class="uk-card-media-top">
          <img alt="foto producto" />
        </div>
        <div class="uk-card-body" style="height: 400px; text-align: center;">
                    <h3 class="uk-card-title" style="font-weight: bold;">{{ this.title }}</h3>
                    <h5>${{this.price}}</h5>
                    <p>{{this.description}}</p>
                    <p>{{this.stock}}</p>
                    <p> {{this.category}} </p>
                    <button onclick="addToCart(`{{this.id}}`)" class="uk-button uk-button-secondary uk-button-small uk-border-rounded" >Agregar al carrito</button>
                </div>
      </div>
    </div>
  {{/each}}
</div>